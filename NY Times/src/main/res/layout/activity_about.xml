<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusableInTouchMode="true"
              android:descendantFocusability="beforeDescendants"
              android:orientation="vertical">
    <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/photo"
            android:id="@+id/ivPhoto"
            android:layout_height="@dimen/zero_dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.75"
            tools:ignore="ContentDescription"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/about_scroll_margin_top"
                android:layout_marginStart="@dimen/about_scroll_margin_start"
                android:layout_marginEnd="@dimen/about_scroll_margin_end"
                android:layout_marginBottom="@dimen/about_scroll_margin_bottom"
                android:layout_above="@+id/aboutSocial" android:id="@+id/aboutScroll">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
            >
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/about_text_margin_bottom">
                    <ImageView
                            android:layout_height="@dimen/body_ico_size"
                            app:srcCompat="@drawable/sovest_icon"
                            android:background="@null"
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/body_ico_size"
                            tools:ignore="ContentDescription"/>
                    <TextView
                            android:text="@string/about_Job"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/body_text"

                            android:layout_marginStart="@dimen/about_text_margin_start"
                            android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/about_text_margin_bottom">
                    <ImageView
                            android:layout_height="@dimen/body_ico_size"
                            app:srcCompat="@android:drawable/sym_def_app_icon"
                            android:scaleType="fitXY"
                            android:layout_width="@dimen/body_ico_size"
                            android:adjustViewBounds="false"
                            android:background="@null"
                            tools:ignore="ContentDescription"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/body_text"
                            android:text="@string/android_academy"
                            android:layout_marginStart="@dimen/about_text_margin_start"
                            android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/line"
                            android:background="@color/line_color"
                            tools:ignore="SmallSp"
                            android:layout_marginBottom="@dimen/about_text_margin_bottom"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/body_text"
                            android:text="@string/about"
                            android:layout_marginBottom="@dimen/about_text_margin_bottom"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/line"
                            android:background="@color/line_color"
                            android:id="@+id/tvBotto"
                            tools:ignore="SmallSp"
                            android:layout_marginBottom="@dimen/about_text_margin_bottom"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:id="@+id/ptAboutMessage"
                            android:hint="@string/write_message"
                            android:textSize="@dimen/body_text"
                            tools:ignore="Autofill"
                            android:layout_marginBottom="@dimen/about_text_margin_bottom"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:gravity="end"
                >
                    <Button
                            android:text="@string/send_a_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnAboutSend"
                            android:background="@null"
                            android:textSize="@dimen/body_text"
                            android:textColor="@color/colorAccent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutSocial"
                android:gravity="center_horizontal"
                android:layout_above="@+id/aboutFooter">
            <ImageButton
                    android:layout_width="@dimen/footer_ico_size"
                    android:background="@null"
                    android:layout_height="@dimen/footer_ico_size"
                    app:srcCompat="@drawable/telegram_icon"
                    android:id="@+id/ibAboutTelICO"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/footer_ico_padding"
                    tools:ignore="ContentDescription"
            />
            <ImageButton
                    android:layout_width="@dimen/footer_ico_size"
                    android:background="@null"
                    android:layout_height="@dimen/footer_ico_size"
                    app:srcCompat="@drawable/vk_icon"
                    android:id="@+id/ibAboutVkICO"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/footer_ico_padding"
                    tools:ignore="ContentDescription"/>
            <ImageButton
                    android:layout_width="@dimen/footer_ico_size"
                    android:background="@null"
                    android:layout_height="@dimen/footer_ico_size"
                    app:srcCompat="@drawable/instagram_icon"
                    android:id="@+id/ibAboutInstICO"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/footer_ico_padding"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutFooter"
                android:layout_alignParentBottom="true">
            <TextView
                    android:text="@string/copyright_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/footer_text"
                    android:gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
